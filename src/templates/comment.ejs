<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/static/createComment.js" defer></script>
    <title>Comment</title>
</head>
<body>
    <% if (comment) { %>
    <h2><%= comment.name %></h2>
    <p>Body: <%= comment.content %></p>
    <p>Запостил: <%= comment.user ? comment.user.name : 'Anonymous' %></p>
    <p>Привязан к посту: <%= comment.postId %></p>

    <% if (is_authenticated = true) { %>
        <form id="commentForm">
            <label for="name">Title:</label>
            <input type="text" id="name" name="name" required><br>
            <label for="content">Body:</label>
            <textarea id="content" name="content" required></textarea><br>
            <button type="submit">Submit comment</button>
        </form>
        <% } else { %>
        <p>You must be logged in to create a comment.</p>
        <% } %>
    <% } else { %>
    <p>Not found comment</p>
    <% } %>


    <a href="/comment/all">Ко всем комментариям</a>
</body>
</html>